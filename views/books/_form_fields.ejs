<div class="form-row">
    <!-- TITLE -->
    <div class="form-item">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= book.title %>">
    </div>
    <!-- AUTHOR -->
    <div class="form-item">
        <label>Author</label>
        <select name="author">
        <% authors.forEach(author => { %>
            <% if(author.id === book.author) { %>
                <option selected label="<%= author.name %>" value="<%= author.id %>">
            <% } else { %>
                <option label="<%= author.name %>" value="<%= author.id %>">
            <% } %>
        <% }) %>
        </select>
    </div>
</div>


<div class="form-row">
    <!-- PUBLISH DATE -->
    <div class="form-item">
        <label>Publish Date</label>
        <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
    </div>
    <!-- PAGE COUNT -->
    <div class="form-item">
        <label for="pageCount">Page Count</label>
        <input type="number" name="pageCount" id="pageCount" min="1" value="<%= book.pageCount %>">
    </div>
</div>

<div class="form-row">
    <!-- COVER -->
    <div class="form-item form-item-no-grow">
        <label for="coverImageName">Cover</label>
        <input type="file" name="cover" id="coverImageName" class="book-cover filepond">
    </div>
    <!-- DESCRIPTION -->
    <div class="form-item">
        <label for="description">Description</label>
        <textarea name="description" id="description"><% book.description %></textarea>
    </div>
</div>